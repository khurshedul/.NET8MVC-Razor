@page
@model EmployeeCrudRazor.Pages.EmployeeList.CreateModel


<br />
<h2 class="text-info">Create New Employee</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employee.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Name" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employee.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Email" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employee.Phone"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Phone" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}